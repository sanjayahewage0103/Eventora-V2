# Database Configuration
DB_HOST=127.0.0.1
DB_NAME=eventora
DB_USER=root
DB_PASS=

# Application Configuration
APP_NAME="Eventora V2"
APP_URL=http://localhost/Eventora-V2/public
APP_DEBUG=true

# Security
APP_KEY=your-secret-key-here
SESSION_LIFETIME=120

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@eventora.com
MAIL_FROM_NAME="Eventora V2"

# Payment Gateway (Example for PayPal)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600